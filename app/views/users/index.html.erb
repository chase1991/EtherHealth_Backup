<% provide(:title, 'Users') %>
<h1>Registered Users</h1>

<table>
	<col width=1000>
	<col width=1000>
	<col width=1000>
	<tr>
		<th>Username</th>
		<th >Email</th>
		<th>Password</th>
		<th colspan="100"></th>
	</tr>

	<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.email %></td>
			<td><%= user.password %></td>
			<td><%= link_to 'Destroy', user_path(user), 
					method: :delete,
					data: {confirm: 'Are you sure?'} 
				%>
			</td>
		</tr>
	<% end %>
</table>